<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Images Day"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:id="@+id/day_title" >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/search_layout"
        android:gravity="center"
        android:layout_below="@id/day_title">
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/day_title"
            android:textAlignment="center"
            android:hint="Search Number of Chickens"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select image to see details"
        android:textSize="18dp"
        android:layout_below="@+id/search_layout"
        android:padding="15dp"
        android:id="@+id/title" >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/details"
        android:gravity="center"
        android:layout_below="@id/title">
<!--    Note 3 color add image and textview -->
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_square_24"
            app:tint="#FFFFFF"
            android:background="@drawable/baseline_square_24"/>
        <TextView
            android:id="@+id/details1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:text="Low chickens"
            android:textSize="12dp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_square_24"
            app:tint="#FA7070"/>
        <TextView
            android:id="@+id/details2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:text="High chickens"
            android:textSize="12dp"
            android:textColor="@android:color/black"/>
        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_square_24"
            app:tint="#7ABA78"/>
        <TextView
            android:id="@+id/details3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_margin="10dp"
            android:text="Equal chickens"
            android:textSize="12dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chickenDayApp"
        android:layout_below="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>