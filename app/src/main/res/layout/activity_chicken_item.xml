<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChickenItemActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Details"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:id="@+id/day_title" >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailName"
        android:layout_marginTop="12dp"
        android:text="Predict Image"
        android:textSize="24sp"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/cardImage"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/iv_chickenpredict"
            android:layout_gravity="center"
            android:src="@drawable/baseline_favorite_24"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TempName"
        android:layout_marginTop="12dp"
        android:text="Infared Image"
        android:textSize="24sp"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/cardImage1"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:id="@+id/iv_chickeninfared"
            android:layout_gravity="center"
            android:src="@drawable/baseline_favorite_24"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chicken:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of Chickens"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:id="@+id/tv_chickenchicken"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highest Temperature:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temp"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:id="@+id/tv_temp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:textColor="@color/lavender"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:id="@+id/tv_time"/>


</LinearLayout>
</ScrollView>