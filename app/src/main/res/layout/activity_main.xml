<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Day To See Images"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/black"
        android:id="@+id/title1" >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latest 7 days"
        android:textSize="20dp"
        android:layout_below="@+id/title1"
        android:padding="15dp"
        android:id="@+id/title2" >
    </TextView>

    <TextView
        android:id="@+id/tv_monthyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="May 2024"
        android:layout_below="@id/title1"
        android:layout_toEndOf="@+id/title2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:textAlignment="textEnd"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_calendar7days"
        android:layout_below="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="770dp"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        tools:listitem="@layout/list_calendar">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Or click here to open Calendar"
        android:id="@+id/btn_opencalendar"
        android:layout_below="@+id/rv_calendar7days"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigator"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/white"
        android:background="@color/black"
        android:paddingTop="0dp"
        android:layout_marginBottom="-50dp"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>